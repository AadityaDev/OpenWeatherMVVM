<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        >

        <ImageView
            android:id="@+id/weatherIcon"
            android:layout_width="96dp"
            android:layout_height="96dp"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/weatherIcon"
            android:layout_toEndOf="@+id/weatherIcon"
            />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_below="@+id/title"
            android:layout_toRightOf="@+id/weatherIcon"
            android:layout_toEndOf="@+id/weatherIcon"
            />

        <TextView
            android:id="@+id/country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description"
            android:layout_toRightOf="@+id/weatherIcon"
            android:layout_toEndOf="@+id/weatherIcon"
            />

        <TextView
            android:id="@+id/minTemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/country"
            android:layout_toRightOf="@+id/weatherIcon"
            android:layout_toEndOf="@+id/weatherIcon"
            />

        <TextView
            android:id="@+id/maxTemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/minTemp"
            android:layout_toRightOf="@+id/weatherIcon"
            android:layout_toEndOf="@+id/weatherIcon"
            />

        <TextView
            android:id="@+id/pressure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maxTemp"
            android:layout_toRightOf="@+id/weatherIcon"
            android:layout_toEndOf="@+id/weatherIcon"
            />

        <TextView
            android:id="@+id/seaLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pressure"
            android:layout_toRightOf="@+id/weatherIcon"
            android:layout_toEndOf="@+id/weatherIcon"
            />

        <TextView
            android:id="@+id/groundLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seaLevel"
            android:layout_toRightOf="@+id/weatherIcon"
            android:layout_toEndOf="@+id/weatherIcon"
            />

        <TextView
            android:id="@+id/humidity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/groundLevel"
            android:layout_toRightOf="@+id/weatherIcon"
            android:layout_toEndOf="@+id/weatherIcon"
            />

        <TextView
            android:id="@+id/temperature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/humidity"
            android:layout_toRightOf="@+id/weatherIcon"
            android:layout_toEndOf="@+id/weatherIcon"
            />

        <TextView
            android:id="@+id/weatherDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/temperature"
            android:layout_alignParentBottom="true"
             />


    </RelativeLayout>

</androidx.cardview.widget.CardView>
